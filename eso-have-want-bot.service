[Unit]
Description=eso-have-want-bot
After=syslog.target network.target

[Service]
Type=simple
User=discordbot
Group=discordbot

LimitNOFILE=999996
# LimitNProc=...

ExecStart=/home/discordbot/eso-discord/discordbot \
            --config /home/discordbot/eso-discord/config.toml \
            --database /home/discordbot/eso-discord/discordbot.db \
            --num-workers 20

KillMode=mixed
KillSignal=SIGTERM

Restart=always
RestartSec=30

[Install]
WantedBy=multi-user.target